
@{
    ViewData["Title"] = "Home Page";
}


<h2>Notre Catalogue de Produit</h2>

<hr />


@foreach (var data in ViewBag.listeCategorie)
{
    <div class="row" style="background-color:#CCCCCC; font-size:16px; color:#000000; width: 100%;">
        <div class="col-xs-12">
            <div>
                @data.LIBELLE_CATEGORIE
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var produit in data.Produit)
        {
            <div class="col-xs-12 col-sm-3">
                <div>@produit.LIBELLE_PRODUIT</div>
                <div><img src="@produit.URL_IMAGE_PRODUIT" width="100" height="80" /></div>
                <div>@produit.DESCRIPTION_PRODUIT</div>
                <div><a href="" class="btn btn-warning">Voir détails</a></div>
            </div>
        }
    </div>
    <hr />
}